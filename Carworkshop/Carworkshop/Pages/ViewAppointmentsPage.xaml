<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Carworkshop.ViewModels"
             x:Class="Carworkshop.Pages.ViewAppointmentsPage"
             Title="View Appointments">

    <ContentPage.BindingContext>
        <vm:ViewAppointmentsViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Label Text="Select Date" FontSize="Title" />
        <DatePicker Date="{Binding SelectedDate}" />
        <ListView ItemsSource="{Binding Appointments}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding CustomerName}" FontAttributes="Bold" FontSize="Title" />
                            <Label Text="{Binding TaskDescription}" FontSize="Body" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>